{
  "name": "server",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "dev": "concurrently \"npm:dev:api\" \"npm:dev:ai\"",
    "dev:api": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:ai": "cd ../ai-service && .venv/bin/uvicorn app:app --host 127.0.0.1 --port 8001",
    "build": "tsc",
    "start": "node dist/server.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "axios": "^1.6.5",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "concurrently": "^8.2.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
